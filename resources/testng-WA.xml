			<class name="gov.nci.webanalyticstests.load.CthpPage_Test" />
			<class name="gov.nci.webanalyticstests.load.HomePage_Test" />
			<class name="gov.nci.webanalyticstests.load.InnerPage_Test" />
			<class name="gov.nci.webanalyticstests.load.LandingPage_Test" />
			<class name="gov.nci.webanalyticstests.load.PdqPage_Test" />
			<class name="gov.nci.webanalyticstests.load.TopicPage_Test" />
			<class name="gov.nci.webanalyticstests.load.appmodule.CtsSearchPages_Test" />
			<class name="gov.nci.webanalyticstests.load.appmodule.DictionaryPage_Test" />
			<class name="gov.nci.webanalyticstests.load.appmodule.DynamicListingPage_Test" />
			<class name="gov.nci.webanalyticstests.load.appmodule.SwsResultsPage_Test" />
			
